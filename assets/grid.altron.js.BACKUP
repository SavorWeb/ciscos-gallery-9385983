  return Math.max.apply(Math, array);
};

grid = {
  setBlocks: function(col, opt) {
    reset(col, opt);
    $('.loader').hide();
    return $(options.pins).each(function() {
      var height, min, _left, _top;
      min = getMinimum();
      _left = min * (options.width + options.offsetX);
      _top = array[min];
      $(this).css({
