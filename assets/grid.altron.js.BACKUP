    }
  }
  array = [];
  _results = [];
  for (i = _i = 0, _ref = cols - 1; 0 <= _ref ? _i <= _ref : _i >= _ref; i = 0 <= _ref ? ++_i : --_i) {
    _results.push(array[i] = options.marginTop);
  }
  return _results;
};

getMinimum = function() {
  var i, min, _i, _ref;
  min = 0;
  for (i = _i = 0, _ref = array.length; 0 <= _ref ? _i <= _ref : _i >= _ref; i = 0 <= _ref ? ++_i : --_i) {
    if (array[min] > array[i]) {
