  var i, _i, _ref, _results;
  if (col && opt) {
    $.extend(options, opt);
    cols = col;
  } else {
    if ($(window).width() <= 400) {
      $.extend(options, {
        width: 100,
        offsetX: 0,
        offsetY: 100
      });
      cols = 1;
    } else if ($(window).width() > 400 && $(window).width() <= 768) {
      $.extend(options, {
        width: 45,
        offsetX: 10,
        offsetY: 100
      });
      cols = 2;
    } else if ($(window).width() > 768 && $(window).width() <= 992) {
      $.extend(options, {
        width: 30,
        offsetX: 5
      });
      cols = 3;
    } else {
      $.extend(options, {
        width: 22,
        offsetX: 4
      });
