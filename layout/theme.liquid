    <div> 
      <ul class="list">
        {% for link in linklists[settings.main_linklist].links %}
        <li>
          {% assign words = link.title | split: '/' %}
          <a href="{{ link.url }}">{{ words.first }}</a>
          {% unless linklists[link.handle] == empty %}
          <ul>
            {% for link in linklists[link.handle].links %}
