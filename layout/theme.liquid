              {% if tagline %}<span>Or create account</span>{% endif %}
            </a>
            {% endif %}
          </li>
          {% endif %}
        </ul>

      <div class="icon-social">
        {% if settings.twitter-url.size > 0 %}<a href="{{ settings.twitter-url }}" class="icon-twitter"></a>{% endif %}
